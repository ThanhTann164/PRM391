<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh Toán"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Thông tin đơn hàng -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông Tin Đơn Hàng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMaDonHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã đơn hàng: DH001"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTongTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 500,000 VNĐ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E91E63" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Phương thức thanh toán -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn Phương Thức Thanh Toán"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Nút thanh toán VNPay -->
    <Button
        android:id="@+id/btnThanhToanVNPay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Thanh Toán Qua VNPay"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_vnpay"
        android:layout_marginBottom="12dp"
        android:drawableStart="@drawable/ic_vnpay"
        android:drawablePadding="8dp" />

    <!-- Nút thanh toán tiền mặt -->
    <Button
        android:id="@+id/btnThanhToanTienMat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Thanh Toán Tiền Mặt"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_cash"
        android:layout_marginBottom="24dp"
        android:drawableStart="@drawable/ic_cash"
        android:drawablePadding="8dp" />

    <!-- Thông tin bổ sung -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu ý:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Thanh toán VNPay: An toàn, nhanh chóng\n• Thanh toán tiền mặt: Giao hàng và thu tiền"
                android:textSize="12sp"
                android:textColor="#666666"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout> 